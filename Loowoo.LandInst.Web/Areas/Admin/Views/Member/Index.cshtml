@using Loowoo.LandInst.Model
@using Loowoo.LandInst.Common
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<VApprovalMember> list = ViewBag.List;
    var type = Request.QueryString["type"] ?? "";
    switch (type)
    {
        case "working":
            ViewBag.Title += "-执业登记";
            break;
        case "transfer":
            ViewBag.Title += "-机构转移";
            break;
    }
}
<form class="form-inline search-form">
    <div class="col-lg-8">
        <div class="input-group">
            <span class="input-group-addon">查询会员</span>
            <input type="text" class="form-control" name="name" placeholder="会员姓名" value="@(Request.QueryString["name"])">
            <input type="hidden" name="type" value="@(type)" />
            <div class="input-group-btn">
                <input type="submit" class="btn btn-primary" value="查询" />
                <input type="button" id="btn-agree" class="btn btn-success" value="批量通过" />
                <input type="button" id="btn-disagree" class="btn btn-warning" value="批量不通过" />
            </div>
        </div>
    </div>
</form>


<table class="table">
    <tr>
        <th>
            <input id="btn-select" type="checkbox" /></th>
        <th>用户名</th>
        <th>姓名</th>
        <th>状态</th>
        <th>手机号</th>
        <th>所属机构</th>
        <th>详细</th>
    </tr>
    @foreach (var item in list)
    { 
        <tr>
            <td>
                <input type="checkbox" name="ID" value="@(item.ID)" /></td>
            <td>@(item.Username)</td>
            <td>@(item.RealName)</td>
            <td>@(item.Status.GetDescription())</td>
            <td>@(item.MobilePhone)</td>
            <td>@(item.InstitutionID)</td>
            <td><a href="/admin/member/profile?id=@(item.ID)">查看</a></td>
        </tr>
    }
    <tr>
        <td colspan="8">
            @Html.Partial("_pagination", ViewBag.Page as object)
        </td>
    </tr>
</table>
<script>
    $(function () {

        $("#btn-select").click(function () {
            $("input[type='checkbox']").prop('checked', this.checked);
        });

        $("#btn-agree").click(function () {
            submitApproval(true);
        });

        $("#btn-disagree").click(function () {
            submitApproval(false);
        });

        function submitApproval(result) {
            var data = getData();
            $.post("/admin/member/approval?result=" + result, data, function (json) {
                if (json.result) {
                    alert("操作成功");
                    window.location.href = window.location.href;
                }
            }, "json");
        }

        function getData() {
            var ids = [];
            $("input[name='id']:checked").each(function () {
                var val = $(this).val();
                ids.push(val);

            });
            return { id: ids.join() };
        }

    });
</script>
