@using Loowoo.LandInst.Model
@using Loowoo.LandInst.Common
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<Member> list = ViewBag.List;
}

<h2>用户管理</h2>
<form id="member-list-form" role="form" class="form-horizontal">
    <label class="control-label">姓名</label>
    <input type="text" />

    <label class="control-label">业务</label>
    <select name="businessType">
        <option value="0">全部</option>
        <option value="@((int)ApprovalType.Change)">变更</option>
        <option value="@((int)ApprovalType.Exam)">考试</option>
        <option value="@((int)ApprovalType.Register)">注册</option>
        <option value="@((int)ApprovalType.Working)">执业</option>
        <option value="@((int)ApprovalType.Transfer)">转移</option>
    </select>

    <button type="submit" class="btn btn-primary">查询</button>
    <input type="button" class="btn btn-primary" value="审批" />

</form>


<table class="table">
    <tr>
        <th>
            <input id="btn-select" type="checkbox" /></th>
        <th>用户名</th>
        <th>姓名</th>
        <th>状态</th>
        <th>手机号</th>
        <th>所属机构</th>
        <th>详细</th>
    </tr>
    @foreach (Member item in list)
    { 
        <tr>
            <td>
                <input type="checkbox" name="ID" value="@(item.ID)" /></td>
            <td>@(item.Username)</td>
            <td>@(item.RealName)</td>
            <td>@(item.Status.GetDescription())</td>
            <td>@(item.MobilePhone)</td>
            <td>@(item.InstitutionName)</td>
            <td><a href="/admin/member/profile?id=@(item.ID)">查看</a></td>
        </tr>
    }
    <tr>
        <td colspan="8">
            @Html.Partial("_pagination", ViewBag.Page as object)
        </td>
    </tr>
</table>
