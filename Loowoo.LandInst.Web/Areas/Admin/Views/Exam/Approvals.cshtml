@using Loowoo.LandInst.Common
@using Loowoo.LandInst.Model
@{
    ViewBag.Title = "报名考试审批";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<VApprovalExam> list = ViewBag.List;
}

<h2>报名考试审批</h2>
<input id="btn-agree" type="button" class="btn btn-primary" value="通过审批" />
<input id="btn-disgree" type="button" class="btn btn-danger" value="不通过" />
<table class="table">
    <tr>
        <th>
            <input id="btn-select" type="checkbox" /></th>
        <th>姓名</th>
        <th>考试名称</th>
        <th>报名日期</th>
        <th>审核日期</th>
        <th>用户状态</th>
        <th>资料</th>
    </tr>
    @foreach (var item in list)
    { 
        <tr>
            <td>
                <input type="checkbox" name="id" value="@(item.ID)" />
            </td>
            <td>@(item.RealName)</td>
            <td>@(item.ExamName)</td>
            <td>@(item.CreateTime.ToShortDateString())</td>
            <td>@(item.ApprovalTime.HasValue ? item.ApprovalTime.Value.ToShortDateString() : "")
            </td>
            <td>@(item.Status.GetDescription())</td>
            <td><a href="/admin/member/profile?id=@(item.UserID)">详细</a></td>
        </tr>
    }
    <tr>
        <td colspan="6">@Html.Partial("_pagination", ViewBag.Page as object)</td>
    </tr>
</table>
<script>
    $(function () {
        $("#btn-select").click(function () {
            $("input[type='checkbox']").prop('checked', this.checked);
        });

        $("#btn-agree").click(function () {
            submitApproval(true);
        });

        $("#btn-disagree").click(function () {
            submitApproval(false);
        });

        function submitApproval(result) {
            var data = getData();
            $.post("/admin/exam/approval?result=" + result, data, function (json) {
                if (json.result) {
                    alert("操作成功");
                    window.location.href = window.location.href;
                }
            }, "json");
        }

        function getData() {
            var ids = [];
            $("input[name='id']:checked").each(function () {
                var val = $(this).val();
                ids.push(val);

            });
            return { id: ids.join() };
        }
    });

</script>
