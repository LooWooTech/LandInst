@using Loowoo.LandInst.Common
@using Loowoo.LandInst.Model
@{
    ViewBag.Title = "ExamResult";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<VApprovalExam> list = ViewBag.List;
}

<h2>考试结果管理</h2>
<form class="form">
    <label>用户姓名：</label>
    <input type="text" name="name" />
    <label>考试名称</label>
    <select></select>
    <input type="submit" value="查询" />
    <input type="button" id="btn-agree" class="btn btn-primary" value="通过考试" />
    <input type="button" id="btn-disagree" class="btn btn-waning" value="未通过考试" />
</form>
<table class="table">
    <tr>
        <th>
            <input id="btn-select" type="checkbox" /></th>
        <th>姓名</th>
        <th>手机</th>
        <td>考试项目</td>
        <td>用户状态</td>
        <th>详细</th>
    </tr>
    @foreach (var item in list)
    { 
        <tr>
            <td>
                <input type="checkbox" name="id" value="@(item.ID)" />
            </td>
            <td>@(item.RealName)</td>
            <td>@(item.MobilePhone)</td>
            <td>@(item.ExamName)</td>
            <td>@(item.Status.GetDescription())</td>
            <td><a href="/admin/member/profile?id=@(item.UserID)">详细</a></td>
        </tr>
    }
    <tr>
        <td colspan="6">
            @Html.Partial("_pagination", ViewBag.Page as object)
        </td>
    </tr>
</table>
<script>
    $(function () {
        $("#btn-select").click(function () {
            $("input[type='checkbox']").prop('checked', this.checked);
        });

        $("#btn-agree").click(function () {
            submitApproval(true);
        });

        $("#btn-disagree").click(function () {
            submitApproval(false);
        });

        function submitApproval(result) {
            var data = getData();
            $.post("/admin/exam/examresult?result=" + result, data, function (json) {
                if (json.result) {
                    alert("操作成功");
                    window.location.href = window.location.href;
                }
            }, "json");
        }

        function getData() {
            var ids = [];
            $("input[name='id']:checked").each(function () {
                var val = $(this).val();
                ids.push(val);

            });
            return { id: ids.join() };
        }
    });

</script>