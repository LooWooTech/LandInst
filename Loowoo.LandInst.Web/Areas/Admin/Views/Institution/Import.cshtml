@using Loowoo.LandInst.Model
@using Loowoo.LandInst.Common
@{
    ViewBag.Title = "批量导入机构";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form id="import-form" role="form" class="form-horizontal" method="post" enctype="multipart/form-data" action="import" target="_uploadframe">
    <div class="form-group">
        <label class="control-label col-lg-2">初始登录密码</label>
        <div class="col-sm-3">
            <input type="text" name="password" class="form-control input-sm" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">确认初始登录密码</label>
        <div class="col-sm-3">
            <input type="text" name="repassword" class="form-control input-sm" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">选择Excel文件</label>
        <div class="col-sm-3">
            <input type="file" name="file" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2"></label>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-upload"></i>上传导入</button>
            <a href="~/templates/勘测机构导入模板.xlsx">点击下载导入模板</a>
        </div>
    </div>
</form>
<div id="import-result" class="alert"></div>
<iframe id="_uploadframe" name="_uploadframe" width="0" height="0" frameborder="0"></iframe>
<script>
    $(function () {
        $("#_uploadframe").load(function () {
            var content = $(this).contents().find("body").html();
            if (content) {
                var json = eval("(" + content + ")");
                if (json.result) {
                    alert("导入完成");
                    var errors = json.data || [];
                    if (errors.length > 0) {
                        var html = "以下为失败用户：";
                        for (var i = 0; i < errors.length; i++) {
                            html += "<li>" + errors[i] + "</li>";
                        }
                        $("#import-result").addClass("alert-warning").html(html);
                    } else {
                        window.location.href = "/admin/institution/";
                    }
                } else {
                    alert("导入失败");
                }
            }
        });
    });
</script>
