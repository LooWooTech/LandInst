@using Loowoo.LandInst.Model
@{
    ViewBag.Title = "机构管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<VApprovalInst> list = ViewBag.List;
    var type = Request.QueryString["type"] ?? "register";
    switch (type)
    {
        case "register":
            ViewBag.Title += "-注册登记";
            break;
        case "change":
            ViewBag.Title += "-信息变更";
            break;
        case "annual":
            ViewBag.Title += "-年审";
            break;
    }
}
<form class="form-inline search-form">
    <div class="col-lg-10">
        <div class="input-group">
            <span class="input-group-addon">查询机构</span>
            <input type="text" class="form-control" name="name" placeholder="机构名称" value="@(Request.QueryString["name"])">
            <input type="hidden" name="type" value="@(type)" />
            <div class="input-group-btn">
                <input type="submit" class="btn btn-primary" value="查询" />

@*                <input type="button" id="btn-agree" class="btn btn-success" value="批量通过" />
                <input type="button" id="btn-disagree" class="btn btn-warning" value="批量不通过" />*@
            </div>
        </div>
    </div>
</form>
@if (list != null)
{
    <table class="table">
        <tr>
@*            <th>
                <input id="btn-select" type="checkbox" /></th>*@
            <th>ID</th>
            <th>机构名称</th>
            <th>类别</th>
            <th>法人代表</th>
            <th>所在地</th>
            <th>手机号</th>
            <th>工商注册号</th>
            <th>申请日期</th>
            <th>审批状态</th>
        </tr>
        @foreach (var item in list)
        { 
            <tr>
@*                <td>
                    <input type="checkbox" name="id" value="@(item.ID)" /></td>*@
                <td>@(item.UserID)</td>
                <td><a href="/admin/institution/profile?id=@(item.UserID)">@(item.InstName)</a></td>
                <td>@(item.Type.ToString())</td>
                <td>@(item.LegalRepresentative)</td>
                <td>@(item.City)</td>
                <td>@(item.MobilePhone)</td>
                <td>@(item.RegistrationNo)</td>
                <td>@(item.CreateTime.ToShortDateString())</td>
                <td>
                    @if (item.Result.HasValue)
                    {
                        if (item.Result.Value)
                        { 
                        <span class="label label-success">已通过</span>
                        }
                        else
                        {
                        <span class="label label-danger">未通过</span>
                        }
                    }
                    else
                    {
                        <span class="label label-default">未审核</span>

                    }
                </td>
                @*                <td>
                    @if (item.Result.HasValue)
                    { 
                        <a href="" class="btn btn-sm btn-agree">通过</a>
                        <a href="" class="btn btn-sm btn-disagree">未通过</a>
                    }
                    else
                    {

                    }
                </td>*@
            </tr>
        }
        <tr>
            <td colspan="8">
                @Html.Partial("_pagination", ViewBag.Page as object)
            </td>
        </tr>
    </table>
    <script>
        $(function () {

            $("#btn-select").click(function () {
                $("input[type='checkbox']").prop('checked', this.checked);
            });

            $("#btn-agree").click(function () {
                submitApproval(true);
            });

            $("#btn-disagree").click(function () {
                submitApproval(false);
            });

            function submitApproval(result) {
                var data = getData();
                $.post("/admin/institution/approval?result=" + result, data, function (json) {
                    if (json.result) {
                        alert("操作成功");
                        window.location.href = window.location.href;
                    }
                }, "json");
            }

            function getData() {
                var ids = [];
                $("input[name='id']:checked").each(function () {
                    var val = $(this).val();
                    ids.push(val);

                });
                return { id: ids.join() };
            }

        });
    </script>
}
