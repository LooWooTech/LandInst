@using Loowoo.LandInst.Model
@{
    ViewBag.Title = "机构管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<VApprovalInst> list = ViewBag.List;
    var type = Request.QueryString["type"];
}

<h2>机构管理</h2>
<form id="inst-search-form">
    机构名称：
    <input type="text" name="keyword" />
    <input type="hidden" name="status" value="@(Request.QueryString["status"])" />

    <select name="type">
        <option value="register" @(type == "register" ? "selected=selected" : "")>注册登记</option>
        <option value="change" @(type == "change" ? "selected=selected" : "")>信息变更</option>
        <option value="annual" @(type == "annual" ? "selected=selected" : "")>年审</option>
    </select>

    <input type="submit" class="btn btn-default" value="查询" />

    <input type="button" id="btn-agree" class="btn btn-primary" value="审批" />
    <input type="button" id="btn-disagree" class="btn btn-warning" value="不通过" />
</form>
@if (list != null)
{
    <table class="table">
        <tr>
            <th>
                <input id="btn-select" type="checkbox" /></th>
            <th>机构名称</th>
            <th>类别</th>
            <th>法人代表</th>
            <th>所在地</th>
            <th>手机号</th>
            <th>工商注册号</th>
            <th>审批状态</th>
            <th>详细</th>
        </tr>
        @foreach (var item in list)
        { 
            <tr>
                <td>
                    <input type="checkbox" name="ID" value="@(item.ID)" /></td>
                <td>@(item.InstName)</td>
                <td>@(item.Type.ToString())</td>
                <td>@(item.LegalRepresentative)</td>
                <td>@(item.City)</td>
                <td>@(item.MobilePhone)</td>
                <td>@(item.RegistrationNo)</td>
                <td>@(item.Result.HasValue ? (item.Result.Value ? "已审" : "") : "")</td>
                <td><a href="/admin/institution/profile?id=@(item.ID)">查看</a></td>
            </tr>
        }
        <tr>
            <td colspan="8">
                @Html.Partial("_pagination", ViewBag.Page as object)
            </td>
        </tr>
    </table>
    <script>
        $(function () {

            $("#btn-select").click(function () {
                $("input[type='checkbox']").prop('checked', this.checked);
            });

            $("#btn-agree").click(function () {
                submitApproval(true);
            });

            $("#btn-disagree").click(function () {
                submitApproval(false);
            });

            function submitApproval(result) {
                var data = getData();
                $.post("/admin/institution/approval?result=" + result, data, function (json) {
                    if (json.result) {
                        alert("操作成功");
                        window.location.href = window.location.href;
                    }
                }, "json");
            }

            function getData() {
                var ids = [];
                $("input[name='id']:checked").each(function () {
                    var val = $(this).val();
                    ids.push(val);

                });
                return { id: ids.join() };
            }

        });
    </script>
}