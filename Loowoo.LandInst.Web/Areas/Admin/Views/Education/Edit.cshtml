@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<form id="education-form" role="form" class="form-horizontal">
    <label class="control-label">名称</label>
    <input type="text" name="Name" class="form-control input-sm" />
    <label class="control-label">教育机构</label>
    <input type="text" name="Agency" class="form-control input-sm" />
    <label class="control-label">起始时间</label>
    <input type="text" name="StartDate" class="form-control input-sm" />
    <label class="control-label">结束时间</label>
    <input type="text" name="EndDate" class="form-control input-sm" />
    <label class="control-label">总学时</label>
    <input type="text" name="Hours" class="form-control input-sm" />

    <button type="submit" class="btn btn-primary">提交注册</button>

</form>
<script>
    $(function () {
        $("#education-form").submit(function () {
            var data = $(this).serialize();
            $.post("/education/edit", data, function (json) {

            }, "json");
            return false;
        });
    });
</script>
