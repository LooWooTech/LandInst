@using Loowoo.LandInst.Model
@using Loowoo.LandInst.Common
@{
    ViewBag.Title = "_MemberProfile";
    MemberProfile profile = Model ?? new MemberProfile();
}
<legend>会员资料</legend>
<table class="table table-bordered">
    <tr>
        <th style="width: 150px;">真实姓名</th>
        <td>@(profile.RealName)</td>
        <th style="width: 150px;">性别</th>
        <td>@(profile.Gender)</td>
    </tr>
    <tr>
        <th>出生年月</th>
        <td>@(profile.Birthday.HasValue ? profile.Birthday.Value.ToShortDateString() : null)</td>
        <th>证件号码</th>
        <td>@(profile.IDNo)</td>
    </tr>
    <tr>
        <th>专业</th>
        <td>@(profile.Major)</td>
        <th>学历</th>
        <td>@(profile.EduRecord)</td>
    </tr>
    <tr>
        <th>学位</th>
        <td>@(profile.EduLevel)</td>
        <th>毕业学校</th>
        <td>@(profile.School)</td>
    </tr>
    <tr>
        <th>民族</th>
        <td>@(profile.Nationality)</td>
        <th>籍贯</th>
        <td>@(profile.NativePlace)</td>
    </tr>
    <tr>
        <th>职称</th>
        <td>@(profile.Title)</td>
        <th>政治面貌</th>
        <td>@(profile.PoliticalState)</td>
    </tr>
    <tr>
        <th>手机</th>
        <td>@(profile.MobilePhone)</td>
        <th>邮箱</th>
        <td>@(profile.Email)</td>
    </tr>
    <tr>
        <th>通信地址</th>
        <td>@(profile.Address)</td>
        <th>邮编</th>
        <td>@(profile.Postcode)</td>
    </tr>
</table>
