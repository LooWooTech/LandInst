@using Loowoo.LandInst.Model
@{
    ViewBag.Title = "继续教育申请";
    Layout = "~/Areas/Institution/Views/Shared/_Layout.cshtml";
    List<Education> educations = ViewBag.Educations;
}
<form id="education-form" role="form" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-lg-2">会员姓名</label>
        <div class="col-sm-3">
            <textarea class="form-control input-sm" rows="15" name="realNames"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">选择继续教育</label>
        <div class="col-sm-10">
            <table class="table table-bordered" id="edu-list">
                <tr>
                    <th style="width: 40px"></th>
                    <th style="width: 150px">继续教育名称</th>
                    <th style="width: 200px">学习时间</th>
                    <th style="width: 60px">学时</th>
                    <th style="width: 120px">教育机构</th>
                    <th>简介</th>
                </tr>
                @foreach (var edu in educations)
                { 
                    <tr>
                        <td>
                            <input type="radio" name="eduId"   value="@(edu.ID)" /></td>
                        <td>@(edu.Name)</td>
                        <td>@(edu.StartDate.ToShortDateString()) ~　@(edu.EndDate.ToShortDateString())</td>
                        <td>@(edu.Hours)</td>
                        <td>@(edu.Agency)</td>
                        <td>@(edu.Summary)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2"></label>
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="确认申请" />
        </div>
    </div>
</form>
<script>
    $(function () {
        $("#education-form").submit(function () {
            var data = $(this).serialize();
            $.request("/institution/education/submit?eduId=" + eduId, data, function () {
                alert("申请成功");
                window.location.href = "/institution/education/";
            });
            return false;
        });
    });
</script>
