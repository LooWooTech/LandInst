@{
    ViewBag.Title = "会员转入申请";
    Layout = "~/Areas/Institution/Views/Shared/_Layout.cshtml";
}

<h2>会员转入申请</h2>
<form id="transfer-form" role="form" class="form-horizontal">
    <label class="control-label">查询姓名</label>
    <input type="text" id="control-keyword" class="form-control input-sm" />
    <input id="btn-search" type="button" value="查询" class="btn btn-primary" /><br />
    <label class="control-label">选择会员</label>
    <select id="control-id" name="memberId" class="form-control input-sm">
    </select>
    <input type="submit" value="转入会员到本机构" class="btn btn-primary" />
</form>
<script>
    $(function () {
        $("#btn-search").click(function () {
            var keyword = $("#control-keyword").val();
            if (!keyword) {
                alert("请出入人名");
                return;
            }

            $.getJSON("/institution/member/search?keyword=" + keyword, function (json) {
                var data = json.data;
                var options = "";
                for (var i = 0; i < data.length; i++) {
                    var m = data[i];
                    options += "<option value=" + m.ID + " selected=\"selected\">" + m.RealName + "(" + m.MobilePhone + ")" + "</option>";
                }
                $("#control-id").html(options);
            });

        });

        $("#transfer-form").submit(function () {
            var data = $(this).serialize();
            if (!confirm("确认提交此次转入申请？")) return false;
            $.post("/institution/transferin", data, function (json) {
                if (json.result) {
                    alert("申请转入操作成功，等待管理员审核");
                    window.location.href = "/institution/member/transfers";
                }
            }, "json");
            return false;
        });

    });
</script>
