@using Loowoo.LandInst.Model
@{
    ViewBag.Title = "会员转入申请";
    Layout = "~/Areas/Institution/Views/Shared/_Layout.cshtml";
    Member member = ViewBag.Member; 
}

<form id="transfer-form" role="form" class="form-horizontal" method="post">
    <input type="hidden" name="mode" value="@((int)TransferMode.In)" />
    @if (member != null)
    {
        <div class="form-group">
            <label class="control-label col-lg-2">会员信息</label>
            <div class="col-sm-8">
                <div class="input-group">
                    <input type="hidden" name="memberId"  value="@(member.ID)"/>
                    <table class="table table-bordered">
                        <tr>
                            <th>姓名</th>
                            <td>@(member.RealName)</td>
                            <th>性别</th>
                            <td>@(member.Gender)</td>
                        </tr>
                        <tr>
                            <th>出生年月</th>
                            <td>@(member.Birthday.HasValue ? member.Birthday.Value.ToShortDateString() : null)</td>
                            <th>身份证</th>
                            <td>@(member.IDNo)</td>
                        </tr>
                        <tr>
                            <th>手机</th>
                            <td>@(member.MobilePhone)</td>
                            <th>Email</th>
                            <td>@(member.Email)</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    { 
        <div class="form-group">
            <label class="control-label col-lg-2">查询会员</label>
            <div class="col-sm-3">
                <div class="input-group">
                    <input type="text" class="form-control" id="memberName" placeholder="会员姓名">
                    <div class="input-group-btn">
                        <input id="btn-search-member" type="button" class="btn btn-primary" value="查询" />
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-lg-2">选择会员</label>
            <div class="col-sm-3">
                <select id="memberId" name="memberId" class="form-control input-sm">
                </select>
            </div>
        </div>
    }
    <div class="form-group">
        <label class="control-label col-lg-2"></label>
        <div class="col-sm-3">
            <input type="submit" value="转入会员到本机构" class="btn btn-success" />
        </div>
    </div>
</form>
<script>
    $(function () {
        $("#btn-search-member").click(function () {
            var keyword = $("#memberName").val();
            if (!keyword) {
                alert("请出入人名");
                return;
            }

            $.getJSON("/institution/member/search?keyword=" + encodeURI(keyword), function (json) {
                var data = json.data;
                var options = "";
                for (var i = 0; i < data.length; i++) {
                    var m = data[i];
                    options += "<option value=" + m.ID + " selected=\"selected\">" + m.RealName + "(" + m.MobilePhone + ")" + "</option>";
                }
                $("#memberId").html(options);
            });

        });

        $("#transfer-form").submit(function () {
            var data = $(this).serialize();
            if (!confirm("确认提交此次转入申请？")) return false;

            $.request("/institution/member/transfer?" + data, null, function (json) {
                alert("申请转入操作成功，等待管理员审核");
                window.location.href = "/institution/member/transfers";
            });
            return false;
        });

    });
</script>
