@using Loowoo.LandInst.Model
@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "注册登记";
    ProfileCheck check = ViewBag.ProfileCheck;
    
    var action = Request.RequestContext.RouteData.Values["action"];
}

<h2>注册登记</h2>
<form id="institution-profile-from"  role="form" class="form-horizontal" method="post">
    <label class="control-label">机构全称</label>
    <input type="text" name="FullName" class="form-control input-sm" />
    <label class="control-label">机构简称</label>
    <input type="text" name="Name" class="form-control input-sm" />
    <label class="control-label">工商登记号</label>
    <input type="text" name="RegistrationNo" class="form-control input-sm" />
    <label class="control-label">法人代表</label>
    <input type="text" name="LegalRepresentative" class="form-control input-sm" />
    <label class="control-label">注册资金</label>
    <input type="text" name="RegisteredCapital" class="form-control input-sm" />
    <label class="control-label">经营范围</label>
    <input type="text" name="BusinessScope" class="form-control input-sm" />
    <label class="control-label">注册证书号</label>
    <input type="text" name="CertificateNo" class="form-control input-sm" />
    <label class="control-label">利税总额（万元）</label>
    <input type="text" name="TotalProfits" class="form-control input-sm" />
    <label class="control-label">机构地址</label>
    <input type="text" name="Address" class="form-control input-sm" />
    <label class="control-label">邮编</label>
    <input type="text" name="Postcode" class="form-control input-sm" />
    <label class="control-label">电子信箱</label>
    <input type="text" name="Email" class="form-control input-sm" />
    <label class="control-label">公司网址</label>
    <input type="text" name="Website" class="form-control input-sm" />
    <label class="control-label">营业期限</label>
    <input type="text" name="OperatingPeriod" class="form-control input-sm" />
    <button type="submit" class="btn btn-primary">提交注册</button>
</form>
<script>
    $(function () {
        $("#institution-profile-from").submit(function () {
            var data = $(this).serialize();
            $.post("/institution/editprofile", data, function (json) {

            }, "json");
            return false;
        });
    });
</script>
